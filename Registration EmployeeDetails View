@* for valiadtion plugins *@

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
<script src="~/Js/lib/jquery.js"></script>
<script src="~/Js/lib/jquery-3.1.1.js"></script>
<script src="~/Js/dist/jquery.validate.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />


<script>
    $(document).ready(function () {
        $("#DateOfBirth").datepicker();
        //$.validator.setDefaults({
        //    submitHandler: function () {
        //        alert("submitted");
        //    }
        //});        
        $("#empdetform").validate({
            rules: {
                UserName: "required",
                PassWord: {
                    required: true,
                    minlength: 6
                },
                ReTypePassWord: {
                    required: true,
                    minlength: 6,
                    equalTo: "#PassWord"
                },
                DateOfBirth: {
                    required: true,
                    date: true                    
                },
                MobileNo: {
                    required: true,
                    digits: true,
                    minlength: 10,
                    maxlength: 10
                },
                EmailID: {
                    required: true,
                    email: true
                },
                CountryName: "required",
                State: "required",
                City: "required",
                Description: "required",
            },
            messages: {
                UserName: "please enter username",
                PassWord: {
                    required: "please enter password",
                    minlength: "length must be 6"
                },
                ReTypePassWord: {
                    required: "plaese enter re-type password",
                    minlength: "length must be 6",
                    equalTo: "password can't matched"
                },
                DateOfBirth: {
                    required: "please enter the D.O.B",
                    date: "type proper date format"
                },
                MobileNo: {
                    required: "please enter the mobile number",
                    digits: "enter numeric values only",
                    minlength: "length must be 10",
                    maxlength: "length is more than 10"
                },
                EmailID: {
                    required: "please enter the email address",
                    email: "your email is inavlid"
                },
                CountryName: "please select the country name",
                State: "please select the state name",
                City: "please select the city name",
                Description_Comments: "please enter the comments",
            }
        });

        $("#CountryName").change(function () {
            debugger;

            $("#State, #City").find("option:gt(0)").remove();
            $("#State").find("option:first").text("Loading...");

            $.ajax({
                type: "GET",
                url: '/CountryStatecity/LoadStateBasedonCountry/',
                data: { countryName: $(this).val() },
                dataType: 'json',
                async: false,
                cache: false,
                success: function (data) {
                    debugger;
                    alert(data[0].StateName);

                    $("#State").find("option:first").text("---select---");

                    for (var i = 0; i < data.length; i++) {
                        $("<option/>").attr("value", data[i].StateID).text((data[i].StateName)).appendTo($("#State"));
                    }
                },
                error: function (xhr, status) {
                    alert(xhr + "" + status);
                },
            });
        });

        $("#State").change(function () {
            $("#City").find("option:gt(0)").remove();
            $("#City").find("option:first").text("Loading...");

            $.ajax({
                type: "GET",
                url: '/CountryStatecity/GetCity',
                data: { Id: $(this).val() },
                dataType: 'json',
                async: false,
                cache: false,
                success: function (data) {
                    debugger;
                    alert(data[0].CityName);

                    $("#City").find("option:first").text("---select---");

                    for (var i = 0; i < data.length; i++) {
                        $("<option/>").attr("value", data[i].CityID).text(data[i].CityName).appendTo($("#City"));
                    }
                },
                error: function (xhr) {
                },

            });
        });
    });

    function showpopup() {
        $("#divcontaipop").dialog({
            height: 400,
            width: 500,
            modal: true,
            buttons: {
                "Ok": function () {
                    $(this).dialog("close");
                    alert("you selected ok!!");
                },
                "Cancel": function () {
                    $(this).dialog("close");
                }
            }
        });
    }
</script>

<style>
    .error {
    color:red;
    }
</style>
